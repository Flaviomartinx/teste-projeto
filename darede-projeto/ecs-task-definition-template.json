{
  "family": "service_app",
  "containerDefinitions": [
    {
      "name": "task_app",
      "image": "${{ secrets.ECR_URI }}:${{ needs.build-and-push.outputs.image_tag }}",
      "memory": 512,
      "cpu": 256,
      "essential": true,
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 80,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "DB_NAME",
          "value": "${{ secrets.DB_NAME }}"
        },
        {
          "name": "DB_HOST",
          "value": "${{ secrets.DB_HOST }}"
        },
        {
          "name": "DB_USER",
          "value": "${{ secrets.DB_USER }}"
        },
        {
          "name": "DB_PASSWORD",
          "value": "${{ secrets.DB_PASSWORD }}"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/tasks-logs",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ],
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "${{ secrets.ECS_EXECUTION_ROLE_ARN }}",
  "taskRoleArn": "${{ secrets.ECS_TASK_ROLE_ARN }}"
}
